        // Optional: Function to send payment details to your backend
        function sendPaymentDetailsToBackend(paymentResponse) {
            fetch('/api/process-payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    payment_id: paymentResponse.razorpay_payment_id,
                    order_id: paymentResponse.razorpay_order_id,
                    signature: paymentResponse.razorpay_signature,
                    product: '30-Day Local Lead Machine',
                    amount: 249
                })
            })
            .then(response => response.json())
            .then(data => {
                console.log('Payment processed:', data);
                // You can trigger email delivery here
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Add some urgency behavior
        setTimeout(function() {
            const urgencyBanner = document.querySelector('.urgency-banner');
